extends layout

block content
	if posts
		.row
			#featured
				div
					a(href='#')
						span.glyphicon.glyphicon-comment
						span  #{posts[0].comments.length}
				img(src=`/images/posts/${posts[0].image}` alt=`${posts[0].image}`).img
				h5= `${posts[0].category} ${posts[0].date.toLocaleString('en-us', { month: "long" })} ${posts[0].date.getDay()} ${posts[0].date.getFullYear()}`
				h2= posts[0].title
				p= `${posts[0].body.substr(0, 200)}...`
		
		.row
			each post, i in posts
				if !i == 0
					.col-xs-6
						div(class=(i % 2 != 0 ? 'post-left' : 'post-right'))
							div
								a(href='#')
									span.glyphicon.glyphicon-comment
									span  #{post.comments.length}
							img(src=`/images/posts/${post.image}` alt=`${post.image}`)
							h5= `${post.category} ${post.date.toLocaleString('en-us', { month: "long" })} ${post.date.getDay()} ${post.date.getFullYear()}`
							h2= post.title
							p= `${post.body.substr(0, 200)}...`
		#footer
